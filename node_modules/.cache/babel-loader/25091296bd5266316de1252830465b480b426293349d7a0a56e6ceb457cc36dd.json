{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from 'axios';\nimport { mapActions } from 'vuex'; // Импортируем mapActions для привязки действия из Vuex\n\nexport default {\n  data() {\n    return {\n      username: '',\n      password: '',\n      error: ''\n    };\n  },\n  methods: {\n    ...mapActions(['login']),\n    // Используем mapActions для доступа к действиям Vuex\n\n    async submitForm() {\n      try {\n        // Отправляем запрос на сервер для аутентификации\n        const response = await axios.post('http://127.0.0.1:8000/login', {\n          username: this.username,\n          password: this.password\n        });\n\n        // Если авторизация успешна, сохраняем токен в Vuex\n        if (response.data.access_token && response.data.user) {\n          this.login({\n            token: response.data.access_token,\n            user: response.data.user\n          });\n          this.$router.push('/');\n        } else {\n          this.error = 'Ошибка авторизации: отсутствуют данные пользователя.';\n        }\n      } catch (error) {\n        // Обрабатываем ошибку\n        if (error.response) {\n          // Если есть ответ от сервера\n          this.error = `Ошибка: ${error.response.data.detail || 'Произошла ошибка при попытке войти в систему.'}`;\n        } else {\n          // Если ошибка не связана с сервером\n          this.error = 'Произошла ошибка при попытке войти в систему.';\n        }\n      }\n    }\n  }\n};","map":{"version":3,"names":["axios","mapActions","data","username","password","error","methods","submitForm","response","post","access_token","user","login","token","$router","push","detail"],"sources":["C:\\Users\\nikec\\frontend\\src\\components\\LoginPage.vue"],"sourcesContent":["<template>\r\n  <div class=\"row justify-content-center mt-5\">\r\n    <div class=\"col-md-6\">\r\n      <div class=\"card\">\r\n        <div class=\"card-header\">\r\n          <h3 class=\"text-center\">Вход в систему</h3>\r\n        </div>\r\n        <div class=\"card-body\">\r\n          <!-- Ошибка -->\r\n          <div v-if=\"error\" class=\"alert alert-danger\">{{ error }}</div>\r\n          \r\n          <!-- Форма входа -->\r\n          <form @submit.prevent=\"submitForm\">\r\n            <div class=\"mb-3\">\r\n              <label for=\"username\" class=\"form-label\">Логин</label>\r\n              <input \r\n                type=\"text\" \r\n                class=\"form-control\" \r\n                id=\"username\" \r\n                v-model=\"username\" \r\n                required\r\n              />\r\n            </div>\r\n            <div class=\"mb-3\">\r\n              <label for=\"password\" class=\"form-label\">Пароль</label>\r\n              <input \r\n                type=\"password\" \r\n                class=\"form-control\" \r\n                id=\"password\" \r\n                v-model=\"password\" \r\n                required\r\n              />\r\n            </div>\r\n            <button type=\"submit\" class=\"btn btn-primary w-100\">Войти</button>\r\n          </form>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios';\r\nimport { mapActions } from 'vuex';  // Импортируем mapActions для привязки действия из Vuex\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      username: '',\r\n      password: '',\r\n      error: ''\r\n    };\r\n  },\r\n  methods: {\r\n    ...mapActions(['login']),  // Используем mapActions для доступа к действиям Vuex\r\n    \r\n    async submitForm() {\r\n      try {\r\n        // Отправляем запрос на сервер для аутентификации\r\n        const response = await axios.post('http://127.0.0.1:8000/login', {\r\n          username: this.username,\r\n          password: this.password\r\n        });\r\n\r\n        // Если авторизация успешна, сохраняем токен в Vuex\r\n        if (response.data.access_token && response.data.user) {\r\n          this.login({\r\n            token: response.data.access_token,\r\n            user: response.data.user\r\n          });\r\n          this.$router.push('/');\r\n        } else {\r\n          this.error = 'Ошибка авторизации: отсутствуют данные пользователя.';\r\n        }\r\n      } catch (error) {\r\n    // Обрабатываем ошибку\r\n    if (error.response) {\r\n      // Если есть ответ от сервера\r\n      this.error = `Ошибка: ${error.response.data.detail || 'Произошла ошибка при попытке войти в систему.'}`;\r\n    } else {\r\n      // Если ошибка не связана с сервером\r\n      this.error = 'Произошла ошибка при попытке войти в систему.';\r\n    }\r\n  }\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n/* Стили для компонента */\r\n</style>\r\n"],"mappings":";AA0CA,OAAOA,KAAI,MAAO,OAAO;AACzB,SAASC,UAAS,QAAS,MAAM,EAAG;;AAEpC,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,EAAE;MACZC,QAAQ,EAAE,EAAE;MACZC,KAAK,EAAE;IACT,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACP,GAAGL,UAAU,CAAC,CAAC,OAAO,CAAC,CAAC;IAAG;;IAE3B,MAAMM,UAAUA,CAAA,EAAG;MACjB,IAAI;QACF;QACA,MAAMC,QAAO,GAAI,MAAMR,KAAK,CAACS,IAAI,CAAC,6BAA6B,EAAE;UAC/DN,QAAQ,EAAE,IAAI,CAACA,QAAQ;UACvBC,QAAQ,EAAE,IAAI,CAACA;QACjB,CAAC,CAAC;;QAEF;QACA,IAAII,QAAQ,CAACN,IAAI,CAACQ,YAAW,IAAKF,QAAQ,CAACN,IAAI,CAACS,IAAI,EAAE;UACpD,IAAI,CAACC,KAAK,CAAC;YACTC,KAAK,EAAEL,QAAQ,CAACN,IAAI,CAACQ,YAAY;YACjCC,IAAI,EAAEH,QAAQ,CAACN,IAAI,CAACS;UACtB,CAAC,CAAC;UACF,IAAI,CAACG,OAAO,CAACC,IAAI,CAAC,GAAG,CAAC;QACxB,OAAO;UACL,IAAI,CAACV,KAAI,GAAI,sDAAsD;QACrE;MACF,EAAE,OAAOA,KAAK,EAAE;QAClB;QACA,IAAIA,KAAK,CAACG,QAAQ,EAAE;UAClB;UACA,IAAI,CAACH,KAAI,GAAI,WAAWA,KAAK,CAACG,QAAQ,CAACN,IAAI,CAACc,MAAK,IAAK,+CAA+C,EAAE;QACzG,OAAO;UACL;UACA,IAAI,CAACX,KAAI,GAAI,+CAA+C;QAC9D;MACF;IACE;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}